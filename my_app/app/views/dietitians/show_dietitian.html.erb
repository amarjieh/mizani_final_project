<div class="page-header">
<div class="container">
  <div class="jumbotron">
    <% if @dietitian.name == nil %>
        <h1> UN-KNOWN</h1>
    <% else %>
        <h1><%= @dietitian.name %></h1> 
    <% end %>
  </div>
</div>
</div>



<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <div class="thumbnail">
      <% if @dietitian.image != nil %>
            <img src="<%= @dietitian.image %>" width="200">
          <% else %>
            <img src="http://localhost:3000/assets/client.jpg" width="200">
          <% end %>

      <div class="caption">
        <h3><%= @dietitian.country %></h3>
        <p>Email: <b><%= @dietitian.email %></b></p>
        <p>Area of expertise: <b><%= @dietitian.areas_of_expertise %></b></p>
        <p>Years of experience: <b><%= @dietitian.years_of_experience %></b></p>
        <p>Rate:  
          <% if @dietitian.rate != nil %>
            <% @i = 0 %>
            <% while @i < (@dietitian.rate%10)  do %>
              <img src="http://localhost:3000/assets/star.jpg" height="25" width="25">
              <% @i +=1 %>
            <% end %>
          <% else %>
            <b>Has not been rated yet</b>
          <% end %>
      </div>
    </div>


   <% if current_client.present? %>
   <div class="well">
    <h5> Rate this dietitian   
      <a href="/diet/rate/<%= @dietitian.id %>/1"><img src="http://localhost:3000/assets/star_off.png" height="25" width="25"></a>
      <a href="/diet/rate/<%= @dietitian.id %>/2"><img src="http://localhost:3000/assets/star_off.png" height="25" width="25"></a>
      <a href="/diet/rate/<%= @dietitian.id %>/3"><img src="http://localhost:3000/assets/star_off.png" height="25" width="25"></a>
      <a href="/diet/rate/<%= @dietitian.id %>/4"><img src="http://localhost:3000/assets/star_off.png" height="25" width="25"></a>
      <a href="/diet/rate/<%= @dietitian.id %>/5"><img src="http://localhost:3000/assets/star_off.png" height="25" width="25"></a>
    </h5>
  </div>
  <div class="well">
    <h5> If this dietitian is right for you? book your diet session with <%= @dietitian.name %> <a href="/diet/to_book/<%= @dietitian.id %>/<%= current_client.id %>" class="btn btn-success btn-sm btn-block"  rel="nofollow">
      Book 
    </a>
  </h5>
</div>
<% end %>

<% if current_dietitian == @dietitian %>
<div class="well">
  <h5> Edit my details <a href="/diet/edit_dietitian/<%= @dietitian.id %>" class="btn btn-success btn-sm btn-block"  rel="nofollow">
    Edit 
  </a>
</h5>   
</div>
<div class="well">
  <h5> Manage my sessions <a href="/my_sessions" class="btn btn-success btn-sm btn-block"  rel="nofollow">
    Manage 
  </a>
</h5>
</div>
<% end %>

  </div>
</div>
