<div class="page-header">
  <br>
  <br>
  <h1>
    <%= @dietitian.email %> Available Sessions
<!--     <a href="/sessions/new" class="btn btn-lg btn-success">New Session</a> -->
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
     <table class="table table-striped table-hover">
      <tr>
        <th>When</th>
        <th>Action</th>
      </tr>

      <% @sessions.each do |session| %>
        <% if ( (session.time > DateTime.now) && (session.status == "opened") ) %>
          <tr>
            <td><%= session.time %></td>
            <td>
              <a href="/session/book/<%= current_client.id %>/<%= session.id %>" class="btn btn-primary">Book This Session</a>
            </td>
          </tr>
        <% end %>
      <% end %>
    </table>

  </div>
</div>