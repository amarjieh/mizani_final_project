<!-- Validation failure messages -->
<% if @dietitian.errors.any? %>
  <% @dietitian.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<div class="page-header">
<div class="container">
  <div class="jumbotron">
    <h1>Edit My Details</h1> 
    <p>Update your details in order to attract more clients</p> 
  </div>
</div>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/diet/update_dietitian/<%= @dietitian.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for dietitian_id -->
      <div class="form-group">
        <label for="dietitian_name" class="control-label">
          Name
        </label>

        <input type="text" id="dietitian_name" name="dietitian_name" placeholder="Dietitian" class="form-control" value="<%= @dietitian.name %>">
      </div>


      <div class="form-group">
        <label for="dietitian_country" class="control-label">
          Country
        </label>

        <input type="text" id="dietitian_country" name="dietitian_country" placeholder="Dietitian" class="form-control" value="<%= @dietitian.country %>">
      </div>


      <div class="form-group">
        <label for="years_of_experience" class="control-label">
          Years Of Experience
        </label>

        <input type="number" id="years_of_experience" name="years_of_experience" placeholder="Dietitian" class="form-control" value="<%= @dietitian.years_of_experience %>">
      </div>


      <div class="form-group">
        <label for="areas_of_expertise" class="control-label">
          Areas Of Expertise
        </label>

          <select name="areas_of_expertise">
            <option value="Weight Loss and Weight Management">Weight Loss and Weight Management</option>
            <option value="Weight Loss Pre and Post Bariatric Surgery">Weight Loss Pre and Post Bariatric Surgery</option>
            <option value="Pre-Conception and Pregnancy">Pre-Conception and Pregnancy</option>
            <option value="Family, Child and Adolescent Nutrition">Family, Child and Adolescent Nutrition</option>
            <option value="Eating Disorders">Eating Disorders</option>
            <option value="Family, Child and Adolescent Nutrition">Family, Child and Adolescent Nutrition</option>
            <option value="Sports Nutrition">Sports Nutrition</option>
            <option value="Diabetes Mellitus and Pre-Diabetes">Diabetes Mellitus and Pre-Diabetes</option>
          </select>
        </div>


      <div class="form-group">
        <label for="image_url" class="control-label">
          Image url
        </label>

        <input type="text" id="image_url" name="image_url" placeholder="Dietitian" class="form-control" value="<%= @dietitian.image %>">
      </div>


      <button class="btn btn-warning">
        Update Info
      </button>
      or
      <a href="/diet/<%= @dietitian.id %>"><button class="btn btn-danger">Cancel</button></a>
    </form>
    <br>
  </div>
</div>
