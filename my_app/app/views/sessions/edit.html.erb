<!-- Validation failure messages -->
<% if @session.errors.any? %>
  <% @session.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Session #<%= @session.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_session/<%= @session.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for dietitian_id -->
      <div class="form-group">
        <label for="dietitian_id" class="control-label">
          Dietitian
        </label>

        <input type="text" id="dietitian_id" name="dietitian_id" placeholder="Dietitian" class="form-control" value="<%= @session.dietitian_id %>">
      </div>

      <!-- Label and input for time -->
      <div class="form-group">
        <label for="time" class="control-label">
          Time
        </label>

        <input type="text" id="time" name="time" placeholder="Time" class="form-control" value="<%= @session.time %>">
      </div>

      <!-- Label and input for status -->
      <div class="form-group">
        <label for="status" class="control-label">
          Status
        </label>

        <input type="text" id="status" name="status" placeholder="Status" class="form-control" value="<%= @session.status %>">
      </div>

      <!-- Label and input for client_id -->
      <div class="form-group">
        <label for="client_id" class="control-label">
          Client
        </label>

        <input type="text" id="client_id" name="client_id" placeholder="Client" class="form-control" value="<%= @session.client_id %>">
      </div>

      <button class="btn btn-warning">
        Update Session
      </button>
      or
      <a href="/sessions/<%= @session.id %>">Cancel</a>
    </form>
  </div>
</div>
