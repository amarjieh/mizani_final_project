<div class="page-header">
  <br>
  <br>
  <h1>
    My Sessions
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
     <table class="table table-striped table-hover">
      <tr>
        <th>When</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>

      <% @sessions.each do |session| %>
        <% if session.time > Time.now %>
          <tr>
            <td><%= session.time %></td>
            <td>
              <% if session.status == "opened"%>
                Available
              <% end %>
              <% if session.status == "booked"%>
                Booked with <%= session.cleint_id.email %>
              <% end %>
            </td>
            <td>
              <% if session.status == "opened"%>
                <a href="/delete_session/<%= session.id %>" class="btn btn-danger">Delete Session</a>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>

    </table>


<div class="well">
      <div class="panel-body">

      <form action="/sessions/new" method="post">
          <!-- Label and input for caption -->
          <div class="form-group">
            <label for="caption" class="control-label">
              Date and Time
            </label>

            <input type="datetime-local" name="session_time" min="<%= DateTime.now %>" id="session_time">
          </div>

          <button class="btn btn-warning">
            Add Session
          </button>
      </form>

      </div>
    </div>

  </div>
</div>