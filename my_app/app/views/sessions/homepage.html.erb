<div class="container">
  <div class="jumbotron">
    <h1>Welcome to Mizni</h1> 
    <p>A marketplace to connect dietitians with clients</p> 
  </div>
</div>
</div>

<div class="container">
	<div class="row"></div>
		<div class="col-md-offset-2 col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading">Are you a client?</div>
				<div class="panel-body">
					<% if current_client.present? %>
					<a href="/clients/edit"><button type="button" class="btn btn-success btn-lg btn-block"><%= current_client.email %></button></a>
					<br>
					<a href="/clients/sign_out" data-method="delete" rel="nofollow"><button type="button" class="btn btn-info btn-lg btn-block">Sign Out</button></a>
					<% else %>
					<a href="/clients/sign_in"><button type="button" class="btn btn-success btn-lg btn-block">Sign in as a Client</button></a>
					<br>
					<a href="/clients/sign_up"><button type="button" class="btn btn-info btn-lg btn-block">Sign up as a Client</button></a>
					<% end %>
				</div>
			</div>
		</div>

		<div class="col-sm-4">
			<div class="panel panel-default">
				<div class="panel-heading">Are you a dietitian?</div>
				<div class="panel-body">
					<% if current_dietitian.present? %>
					<a href="/dietitians/edit"><button type="button" class="btn btn-warning btn-lg btn-block"><%= current_dietitian.email %></button></a>
					<br>
					<a href="/dietitians/sign_out" data-method="delete" rel="nofollow"><button type="button" class="btn btn-danger btn-lg btn-block">Sign Out</button></a>
					<% else %>
					<a href="/dietitians/sign_in"><button type="button" class="btn btn-warning btn-lg btn-block">Sign in as a Dietitian</button></a>
					<br>
					<a href="/dietitians/sign_up"><button type="button" class="btn btn-danger btn-lg btn-block">Sign up as a Dietitian</button></a>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>











